@model WebAPI.MVC.Models.TransportImageViewModel


@using (Html.BeginForm("CreateImage", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(x => x.DetailsGVM.Id)

<div class="form-group">
    @Html.LabelFor(model => model.DetailsIVM.Description, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.DetailsIVM.Description, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DetailsIVM.Description, "", new { @class = "text-danger" })

    </div>
    <input type="file" name="file" />
    <input type="submit" value="Upload" class="btn btn-default" />
</div>

    

}

<div class="row">
    <div class="col-lg-12">

        <div class="alert alert-warning">You have @ViewBag.PhotoCount Photos </div>
    </div>
    @foreach (var item in Model.DetailsGVM.Images)
    {
        <div class="col-lg-3 col-md-4 col-xs-6 thumb">

            <a class="thumbnail" href="@item.PhotoUrl">
                <img class="img-responsive" src="@item.PhotoUrl" style="height: 300px;width:100%;" alt="">
            </a>
            <a href="@Url.Action("Delete", "´Image",new { id = item.Id })" class="btn btn-default btn-block">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            </a>

        </div>

    }
</div>

